<resources>

    <style name="Theme" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/primary_color</item>
        <item name="android:colorPrimaryDark">@color/primary_color_dark</item>
        <item name="android:colorAccent">@color/accent_color</item>
        <item name="android:windowBackground">@color/window_background</item>

        <item name="drawer_button_background">?android:attr/selectableItemBackground</item>
        <item name="drawer_options_button_background">?android:attr/selectableItemBackground</item>
        <item name="button_background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="DrawerButton">
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:background">?drawer_button_background</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/drawer_text_color</item>
    </style>

</resources>